    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColorPrimaryDisableOnly">#b71c1c</item>
        <item name="android:colorControlActivated">#1b5e20</item>
        <item name="android:colorForeground">#f57f17</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="PreferenceTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:preferenceStyle">@style/PreferenceNew</item>
        <item name="android:preferenceScreenStyle">@style/PreferenceNew</item>
        <item name="android:listViewStyle">@style/lightListView</item>
    </style>
    <style name="PreferenceNew" parent="Preference.PreferenceScreen.Material">
        <item name="android:background">@drawable/bg_setting</item>
        <item name="android:foreground">@drawable/bg_setting</item>
    </style>

    <style name="Theme.Preferences" parent="android:Theme.Light" >
        <item name="android:listViewStyle">@style/lightListView</item>
    </style>
    <style name="lightListView">
        <item name="android:background">@color/colorbg</item>
    </style>

    <style name="Widget.TextView.ListSeparator" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="PreferenceListHeader" parent="Widget.TextView.ListSeparator">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">#cccccc</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
    </style>

    <style name="PreferenceScreen" parent="android:Theme.NoTitleBar">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
        <item name="android:background">#F2B1DBF3</item>
    </style>
